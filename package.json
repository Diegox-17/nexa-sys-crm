{
  "name": "nexasys-crm",
  "version": "2.0.0",
  "description": "NEXA-Sys V.02 CRM - Industrial-Digital Architecture",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd src/backend && npm install && cd ../frontend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src/backend && npm test",
    "test:frontend": "cd src/frontend && npm test -- --passWithNoTests",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage",
    "docker:up": "docker-compose up --build -d",
    "docker:down": "docker-compose down -v",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:test:watch": "docker-compose -f docker-compose.test.yml up --build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/nexasys-crm.git"
  },
  "keywords": [
    "crm",
    "nexa-sys",
    "docker",
    "microservices",
    "react",
    "nodejs",
    "postgresql"
  ],
  "author": "NEXA-Sys Team",
  "license": "MIT"
}
